{
  "blocked_functions": [
    {
      "regex": "atoi",
      "replacement": "strtol"
    },
    {
      "regex": "atof",
      "replacement": "strtof"
    },
    {
      "regex": "sprintf",
      "replacement": "snprintf or scnprintf if using the return value"
    },
    {
      "regex": "strcpy",
      "replacement": "strlcpy"
    },
    {
      "regex": "strncpy",
      "replacement": "strlcpy"
    },
    {
      "regex": "strlen",
      "replacement": "strnlen"
    },
    {
      "regex": "strdup",
      "replacement": "strndup"
    },
    {
      "regex": "strstr",
      "replacement": "strnstr"
    },
    {
      "regex": "strchr",
      "replacement": "strnchr"
    },
    {
      "regex": "strdupa",
      "replacement": "strndupa"
    }
  ]
}
